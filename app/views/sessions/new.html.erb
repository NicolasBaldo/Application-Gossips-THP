<body class="session-page">
<h1>THE GOSSIP PROJECT</h1>
<div class="cardb">
  <h2>Connexion</h2>
  <%= form_with(url: login_path, method: "post") do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
  
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit "Se connecter" %>
    </div>
  <% end %>
  <br>
  <br>
  <br>
  <br>
  <h2>Pas encore inscrit? <%= link_to "S'inscrire", signup_path %></h2>
</div>
</body>
