    }

    .cardb {
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.3);
      width: 50%;
      max-width: 500px; 
    }

    .card form {
      margin-top: 20px;
    }

    @font-face {
      font-family: "Namecat";
      src: url('Namecat.ttf') format('truetype');
    }

    h1 {
      font-family: "Namecat", sans-serif;
