<style> 
.session-page {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.form-container {
    background-color: #f2f2f2;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
}
</style> 
<body class="session-page">
<div class="session-page">
  <div class="form-container">
    <h1>Inscription</h1>

    <%= form_with(model: @user, url: signup_path) do |form| %>
      <div class="form-group mb-2">
        <%= form.label :email, style: "font-size: 12px;" %>
        <%= form.email_field :email, class: "form-control form-control-sm", style: "font-size: 12px;" %>
      </div>

      <div class="form-group mb-2">
        <%= form.label :password, style: "font-size: 12px;" %>
        <%= form.password_field :password, class: "form-control form-control-sm", style: "font-size: 12px;" %>
      </div>

      <div class="form-group mb-2">
        <%= form.label :password_confirmation, style: "font-size: 12px;" %>
        <%= form.password_field :password_confirmation, class: "form-control form-control-sm", style: "font-size: 12px;" %>
      </div>

      <%= link_to "S'inscrire", home_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
